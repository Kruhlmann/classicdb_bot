{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": ["esnext"],
        "outDir": "dist",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
